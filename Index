<!DOCTYPE html>
<html>
<head>
  <title>Peta Zona Strategis Lokasi Cabang Baru Waroeng Steak & Shake di Bandung</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Leaflet -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
  <style>
    body, html { margin: 0; padding: 0; }
    #map { height: 100vh; }
    .legend {
      background: white;
      padding: 10px;
      line-height: 1.4em;
      font-size: 12px;
    }
  </style>
</head>
<body>

<div id="map"></div>

<!-- Leaflet -->
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
const map = L.map('map').setView([-6.9, 107.6], 12);

// Basemap
L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
  attribution: '&copy; OpenStreetMap contributors'
}).addTo(map);

// Icon kustom
const wssIcon = L.icon({
  iconUrl: 'https://raw.githubusercontent.com/nonicantika/WSS/WSS.png',
  iconSize: [30, 30],
  iconAnchor: [15, 30],
  popupAnchor: [0, -30]
});

// Utility popup generator
function makePopup(props, fields) {
  let html = '<table>';
  fields.forEach(f => {
    html += `<tr><td><b>${f}</b></td><td>${props[f] || '-'}</td></tr>`;
  });
  html += '</table>';
  return html;
}

// Layer loader
function loadLayer(url, options, name) {
  fetch(url)
    .then(res => res.json())
    .then(data => {
      const layer = L.geoJSON(data, options).addTo(map);
      overlays[name] = layer;
      layerControl.addOverlay(layer, name);
    });
}

const overlays = {};
const layerControl = L.control.layers(null, overlays).addTo(map);

// Skala
L.control.scale().addTo(map);

// Desa (polygon)
loadLayer('desa.geojson', {
  style: { fillColor: "#cddc39", fillOpacity: 0.4, stroke: false },
  onEachFeature: (f, l) => l.bindPopup(makePopup(f.properties, ['NAMOBJ', 'WADMKC', 'WADMKK', 'WADMPR']))
}, "Wilayah Desa");

// Batas Desa (line)
loadLayer('data/batas_desa.geojson', {
  style: { color: '#000', weight: 2, dashArray: '4' }
}, "Batas Desa");

// Zona Strategis (polygon)
loadLayer('data/zona.geojson', {
  style: { color: '#f50057', weight: 1, fillOpacity: 0.4 },
  onEachFeature: (f, l) => l.bindPopup(makePopup(f.properties, ['NAMOBJ', 'WADMKC', 'WADMKK', 'WADMPR']))
}, "Zona Strategis");

// WSS (point + icon)
loadLayer('WSS.geojson', {
  pointToLayer: (f, latlng) => L.marker(latlng, { icon: wssIcon }),
  onEachFeature: (f, l) => l.bindPopup(makePopup(f.properties, ['Cabang', 'Alamat', 'Kelurahan', 'Kecamatan', 'Lintang', 'Bujur']))
}, "WSS");

// Pelanggan (point hijau)
loadLayer('data/pelanggan.geojson', {
  pointToLayer: (f, latlng) => L.circleMarker(latlng, {
    radius: 6, fillColor: "green", color: "darkgreen", weight: 1, fillOpacity: 0.7
  }),
  onEachFeature: (f, l) => l.bindPopup(makePopup(f.properties, ['Nama', 'Alamat', 'Kelurahan', 'Kecamatan', 'Latitude', 'Longitude']))
}, "Pelanggan");

// Kompetitor (point hitam)
loadLayer('data/kompetitor.geojson', {
  pointToLayer: (f, latlng) => L.circleMarker(latlng, {
    radius: 6, fillColor: "black", color: "gray", weight: 1, fillOpacity: 0.6
  }),
  onEachFeature: (f, l) => l.bindPopup(makePopup(f.properties, ['Kompetitor', 'Alamat', 'Kelurahan', 'Kecamatan', 'Lintang', 'Bujur']))
}, "Kompetitor");

// Legenda (opsional, bisa disesuaikan)
L.control({position: 'bottomright'}).onAdd = function() {
  const div = L.DomUtil.create('div', 'legend');
  div.innerHTML = `
    <b>Legenda</b><br>
    <img src="WSS.png" width="20"> WSS<br>
    <span style="color:green;">●</span> Pelanggan<br>
    <span style="color:black;">●</span> Kompetitor<br>
    <span style="background:#f50057;">&nbsp;&nbsp;&nbsp;</span> Zona Strategis<br>
  `;
  return div;
}.addTo(map);
</script>

</body>
</html>
